generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Coffee {
  id          String  @id @default(uuid())
  label       Label   @relation(fields: [label_id], references: [id])
  label_id    String
  name        String
  description String
  price       Decimal
}

model Label {
  id     String   @id @default(uuid())
  type   String   @unique
  Coffee Coffee[]
}
